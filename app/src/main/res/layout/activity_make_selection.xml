<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="30dp"
    tools:context=".LoginSignup.MakeSelection">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_arrow_back_24"
            android:padding="5dp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="make\nselection"
            android:textColor="@color/black"
            android:textSize="40sp"
            android:textAllCaps="true"
            android:fontFamily="@font/muli_black"
            android:layout_marginTop="30dp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select which contact detailshould we use to reset your password?"
            android:textSize="18sp"
            android:textAllCaps="true"
            android:fontFamily="@font/muli_black_italic" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginTop="50dp"
            android:background="@color/lightWhite"
            android:padding="10dp">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_baseline_mobile_screen_share_24"
                android:id="@+id/mobile_icon"
                app:tint="@color/black"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"/>

            <TextView
                android:id="@+id/mobile_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="via sms:"
                android:textSize="25sp"
                android:textAllCaps="true"
                android:layout_toRightOf="@id/mobile_icon"
                android:layout_marginTop="35dp"
                android:fontFamily="@font/muli_black_italic" />

            <TextView
                android:id="@+id/mobile_des"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+913433234343"
                android:textSize="25sp"
                android:textAllCaps="true"
                android:layout_toRightOf="@id/mobile_icon"
                android:layout_below="@id/mobile_title"
                android:textColor="@color/black"
                android:fontFamily="@font/muli_black_italic" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#00000000" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginTop="50dp"
            android:background="@color/lightWhite"
            android:padding="10dp">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_baseline_email_24"
                android:id="@+id/mail_icon"
                app:tint="@color/black"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"/>

            <TextView
                android:id="@+id/mail_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="via mail:"
                android:textSize="25sp"
                android:textAllCaps="true"
                android:layout_toRightOf="@id/mail_icon"
                android:layout_marginTop="35dp"
                android:fontFamily="@font/muli_black_italic" />

            <TextView
                android:id="@+id/mail_des"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="support@gmail.com"
                android:textSize="20sp"
                android:layout_toRightOf="@id/mail_icon"
                android:layout_below="@id/mail_title"
                android:textColor="@color/black"
                android:fontFamily="@font/muli_black_italic" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#00000000" />
        </RelativeLayout>

    </LinearLayout>

</ScrollView>













